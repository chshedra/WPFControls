<Window
	x:Class="WPFControls.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:WPFControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Name="Window"
	Title="MainWindow"
	Width="300"
	Height="400"
	Icon="Resources/icon.ico"
	SizeChanged="MainWindow_OnSizeChanged"
	mc:Ignorable="d">
	<Window.Resources>
		<ResourceDictionary Source="MainResourceDictionary.xaml" />
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Name="FileListViewRow" Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<ListView
			Name="FilesListView"
			Grid.Row="0"
			HorizontalContentAlignment="Stretch"
			ItemTemplate="{StaticResource ListBoxItemTemplate}"
			ItemsSource="{Binding FilesList}">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListBoxItem">
					<Setter Property="Padding" Value="0" />
				</Style>
			</ListView.ItemContainerStyle>
		</ListView>
			</Grid>
				<Button
			Name="AddButton"
			Grid.Row="1"
			Width="30"
			Height="30"
			Margin="6"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Command="{Binding AddCommand}"
			Style="{StaticResource EmptyBackgroundButton}">
			<Image Source="Resources/add.png" />
		</Button>
	</Grid>
</Window>
